
{% extends 'base.html.twig' %}
{% block title %}
    {% if category is defined %}
        {{ category }}
        {% else %}
        {{ program.title }}
    {% endif %}
{% endblock %}
{% block  body %}
<div class="w-50">
    {% if movies is defined %}

        {% for movie in movies %}

            <ul >
                <li>{{ movie.id }}</li>
                <li> <a href="{{ path('wild_show_program', {slug: movie.title |lower|replace({' ': '-'})}) }}"> {{ movie.title }}</a> </li>
                <li>  {{ movie.summary }}</li>
            </ul>

        {% endfor %}
    {% endif %}
    {% if program is defined %}
        <h1>{{ program.title }}</h1>
        <ul>
            {% for season in program.seasons %}
            <li><a href="{{ path ('wild_show_season',{'id': season.id }) }}">Saison {{ season.description }}</a></li>
            {% endfor %}
        </ul>
        <a class="btn btn-secondary" href="{{ path ('wild_show_category', {'categoryName': program.category.name}) }}">retour</a>
    {% endif %}
</div>
{% endblock %}